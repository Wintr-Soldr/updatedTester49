<?xml version="1.0" encoding="utf-8"?>
<!--card view for home page latest updates-->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="161.43dp"
    android:layout_height="119dp"
    android:layout_margin="8.02dp"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:elevation="4dp">
    <!--cardview-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/name_id"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <!--this label is used to display the name of the handler-->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9.02dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Abhishek"
                android:textColor="#05888D"
                android:textSize="12sp" />
            <!--this label is used to display the id number of the handler-->
            <TextView
                android:id="@+id/identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="9.02dp"
                android:layout_toEndOf="@id/name"
                android:fontFamily="@font/roboto_regular"
                android:text="id:M1011"
                android:textColor="#05888D"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/last_row"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@drawable/rectangle_2">
            <!--this label is used to display the date -->
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.95dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="21/05/2021"
                android:textColor="#05888D"
                android:textSize="9sp" />
            <!--this clickable label is used to click to view more info-->
            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/date"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="0sp"
                android:text="View"
                android:textColor="#05888D"
                android:textSize="12sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/cardview_shadow_start_color" />


        </RelativeLayout>
        <!--this label is used to show more info-->
        <TextView
            android:id="@+id/assignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.02dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Assigned Task to Rohan"
            android:textColor="#595959"
            android:textSize="11sp" />
        <!--this label is used to show team-->
        <TextView
            android:id="@+id/team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.02dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Team : Social Media"
            android:textColor="#595959"
            android:textSize="11sp" />
        <!--this label is used to show the updated task-->
        <TextView
            android:id="@+id/task_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.02dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Updated Task 1"
            android:textColor="#595959"
            android:textSize="11sp" />
        <!--this view is for a background-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/cardview_shadow_start_color" />


    </LinearLayout>
    </androidx.cardview.widget.CardView>



